		"@lucide/lab": "^0.1.2",
		"@lucide/svelte": "^0.511.0",
		"@tailwindcss/vite": "^4.1.11",
		"@types/node": "^22.14.1",
		"@types/webfontloader": "^1.6.38",
		"dompurify": "^3.2.6",
		"flowbite-svelte": "^1.10.13",
		"lucide": "^0.511.0",
		"marked": "^16.1.1",
		"mdast-util-inline-spoiler": "^1.0.0",
		"micromark-extension-inline-spoiler": "^1.0.0",
		"nedb": "^1.8.0",
		"normalize.css": "^8.0.1",
		"remark-inline-spoiler": "^1.0.1",
		"scaffolding": "https://codeberg.org/ampmod/scaffolding/archive/master-builds.tar.gz",
